{
    "name": "folder-hide",
    "displayName": "Hide Folders and Files",
    "description": "Shortcut to hide folders or files",
    "repository": {
        "type": "git",
        "url": "https://github.com/tylim88/VS-Code-Folder-HIde"
    },
    "version": "0.0.8",
    "engines": {
        "vscode": "^1.77.0"
    },
    "author": {
        "name": "tylim"
    },
    "icon": "img/icon.png",
    "categories": [
        "Other"
    ],
    "publisher": "tylim88",
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "folder-hide.hide",
                "title": "Hide Folder"
            },
            {
                "command": "file-hide.hide",
                "title": "Hide File"
            },
            {
                "command": "folder-hide.unhide",
                "title": "Unhide Folder or File"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "folder-hide.hide",
                    "when": "false"
                },
                {
                    "command": "file-hide.hide",
                    "when": "false"
                },
                {
                    "command": "folder-hide.unhide",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "folder-hide.hide",
                    "when": "explorerResourceIsFolder",
                    "group": "folder-hide"
                },
                {
                    "command": "file-hide.hide",
                    "when": "!explorerResourceIsFolder",
                    "group": "folder-hide"
                },
                {
                    "command": "folder-hide.unhide",
                    "group": "folder-hide"
                }
            ]
        }
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "eslint --fix",
            "pretty-quick --stage --brach main"
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "setup": "npx -y husky install && rm -rf node_modules && npm i",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.77.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "typescript": "^5.0.4"
    }
}
