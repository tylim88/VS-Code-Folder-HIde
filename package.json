{
    "name": "folder-hide",
    "displayName": "Hide Folders and Files",
    "description": "A simple shortcut to hide folders or files, both globally and locally.",
    "repository": {
        "type": "git",
        "url": "https://github.com/tylim88/VS-Code-Folder-HIde"
    },
    "version": "0.2.2",
    "engines": {
        "vscode": "^1.77.0"
    },
    "author": {
        "name": "tylim"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "publisher": "tylim88",
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "folder-hide",
                "title": "Hide Folder Workspace"
            },
            {
                "command": "file-hide",
                "title": "Hide File Workspace"
            },
            {
                "command": "folder-hide-global",
                "title": "Hide Folder Everywhere"
            },
            {
                "command": "file-hide-global",
                "title": "Hide File Everywhere"
            },
            {
                "command": "unhide",
                "title": "Unhide Folder or File Workspace"
            },
            {
                "command": "unhide-global",
                "title": "Unhide Folder or File Everywhere"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "folder-hide",
                    "when": "false"
                },
                {
                    "command": "file-hide",
                    "when": "false"
                },
                {
                    "command": "folder-hide-global",
                    "when": "false"
                },
                {
                    "command": "file-hide-global",
                    "when": "false"
                },
                {
                    "command": "unhide",
                    "when": "false"
                },
                {
                    "command": "unhide-global",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "submenu": "folder-hide",
                    "when": "explorerResourceIsFolder",
                    "group": "folder-hide"
                },
                {
                    "submenu": "file-hide",
                    "when": "!explorerResourceIsFolder",
                    "group": "folder-hide"
                },
                {
                    "submenu": "unhide",
                    "group": "folder-hide"
                }
            ],
            "folder-hide": [
                {
                    "command": "folder-hide"
                },
                {
                    "command": "folder-hide-global"
                }
            ],
            "file-hide": [
                {
                    "command": "file-hide"
                },
                {
                    "command": "file-hide-global"
                }
            ],
            "unhide": [
                {
                    "command": "unhide"
                },
                {
                    "command": "unhide-global"
                }
            ]
        },
        "submenus": [
            {
                "label": "Hide Folder",
                "id": "folder-hide"
            },
            {
                "label": "Hide File",
                "id": "file-hide"
            },
            {
                "label": "UnHide Folder Or File",
                "id": "unhide"
            }
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "eslint --fix",
            "pretty-quick --stage --brach main"
        ]
    },
    "scripts": {
        "setup": "npx -y husky install && rm -rf node_modules && npm i",
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint . --ext .ts,.js --fix"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.77.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "webpack": "^5.82.0",
        "webpack-cli": "^5.0.2"
    },
    "dependencies": {
        "json5": "^2.2.3",
        "open": "^8.4.2",
        "upath": "^2.0.1"
    }
}
